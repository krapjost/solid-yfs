{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["./src"]
}
